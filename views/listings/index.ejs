<%layout("/layouts/boilerplate")%>
<div class="filters">
  <div class="arrow" id="scrollLeft">
    <i class="fa-solid fa-caret-left"></i>
  </div>
  <div class="owl-carousel owl-theme">
    <div class="item filter">
      <i class="fa-solid fa-fire"></i>
      <p>Trending</p>
    </div>
    <div class="item filter">
      <i class="fa-solid fa-bed"></i>
      <p>Rooms</p>
    </div>
    <div class="item filter">
      <i class="fa-solid fa-mountain-city"></i>
      <p>Iconic Cities</p>
    </div>
    <div class="item filter">
      <i class="fa-solid fa-mountain"></i>
      <p>Mountains</p>
    </div>
    <div class="item filter">
      <i class="fa-brands fa-fort-awesome"></i>
      <p>Castles</p>
    </div>
    <div class="item filter">
      <i class="fa-solid fa-person-swimming"></i>
      <p>Amazing Pool</p>
    </div>
    <div class="item filter">
      <i class="fa-solid fa-campground"></i>
      <p>Camping</p>
    </div>
    <div class="item filter">
      <i class="fa-solid fa-cow"></i>
      <p>Farms</p>
    </div>
    <div class="item filter">
      <i class="fa-regular fa-snowflake"></i>
      <p>Arctic</p>
    </div>
  </div>
  <div class="arrow" id="scrollLeft">
    <i class="fa-solid fa-caret-right" id="scrollRight"></i>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-1">
  <% for( let listing of allListings) { %>
  <a href="/listings/<%=listing._id%>" class="listing-links">
    <div class="card col listing-card">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top shadow"
        alt="listing-image"
        style="height: 20rem" />
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
          <b><%=listing.title%></b>
          <br />
          &#8377;<%=listing.price.toLocaleString("en-IN")%> /night
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
  integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"></script>
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"
  integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw=="
  crossorigin="anonymous"
  referrerpolicy="no-referrer"></script>
<script>
  $(".owl-carousel").owlCarousel({
    loop: true,
    margin: 10,
    nav: false,
    dots: false,
    stagePadding: 10,
    responsive: {
      0: {
        items: 3,
      },
      576: {
        items: 5,
      },
      1000: {
        items: 8,
      },
    },
  });

  document.getElementById("scrollLeft").addEventListener("click", function () {
    $(".owl-carousel").trigger("prev.owl.carousel");
  });

  document.getElementById("scrollRight").addEventListener("click", function () {
    $(".owl-carousel").trigger("next.owl.carousel");
  });
</script>
